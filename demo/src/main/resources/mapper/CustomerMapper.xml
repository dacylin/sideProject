<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.CustomerMapper">

    <select id="findAll" resultType="com.example.demo.entity.Customer">
        SELECT * FROM customer
    </select>

    <select id="findById" parameterType="int" resultType="com.example.demo.entity.Customer">
        SELECT * FROM customer WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.example.demo.entity.Customer">
        INSERT INTO customer (name, email, phone, password)
        VALUES (#{name}, #{email}, #{phone}, #{password})
    </insert>

    <update id="update" parameterType="com.example.demo.entity.Customer">
        UPDATE customer
        SET name = #{name}, email = #{email}, phone = #{phone}, password = #{password}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM customer WHERE id = #{id}
    </delete>
</mapper>
